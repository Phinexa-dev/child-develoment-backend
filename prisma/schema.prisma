generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  name String 
  nic String @unique
  phone String @unique
}

model School {
  sid Int @default(autoincrement()) @id
  name String
}
model Class {
  sid Int @default(autoincrement()) @id
  name String
}

model Classes {
  sid Int @default(autoincrement()) @id
  name String
}